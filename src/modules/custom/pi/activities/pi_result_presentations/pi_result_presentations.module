function create_csv_from_table($header, $rows) {

  $output = "";

  // print out headers
  $output .= "\"" . implode("\",\"", $header) . "\"\r\n";

  // now the data
  $count = 1;
  foreach ($rows as $row) {
    $elements = array();
    foreach ($row as $item) {
      $elements[] = $item;
    }
    $output .= "\"" . implode("\",\"", $elements) . "\"\r\n";
    $count++;
  }

  return $output;
}

